{
	"manifest_version": 2,
	"name": "PerkinelmerSSOClient",
	"version": "1.0",
	"description": "Perkinelemr单点登录客户端插件",
	"icons": {
		"19": "images/logo.png",
		"38": "images/logo.png",
		"128": "images/logo.png"
	},

	"browser_action": {
		"default_title": "Perkinelmer单点登录客户端插件",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["js/jquery.min.js","js/autoLogin.js","js/myssomanage.js"]
			//"run_at": "document_end"
		}
	],
	"background": {
	  "scripts": ["js/background.js"]
	},
	"permissions": [
		"http://*/",
		"tabs",
		"background"
	]
}
